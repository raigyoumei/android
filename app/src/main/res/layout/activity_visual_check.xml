<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/visual_check_title"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    style="@style/ListViewSeparator"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_brake_pedal_title" />

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_brake_pedal_info"/>
                    </LinearLayout>

                    <Button
                        style="@style/ListOkButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_park_title"/>

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_park_info"/>
                    </LinearLayout>

                    <Button
                        style="@style/ListOkButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_prime_mover_title"/>

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_prime_mover_info" />
                    </LinearLayout>

                    <Button
                        style="@style/ListOkButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_prime_mover_speed_title"/>

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_prime_mover_speed_info"/>
                    </LinearLayout>

                    <Button
                        style="@style/ListOkButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_window_washer_title"/>

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_window_washer_info"/>
                    </LinearLayout>

                    <Button
                        style="@style/ListNgButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ListMainTextViewStyle"
                            android:text="@string/check_wiper_title"/>

                        <TextView
                            style="@style/ListSubTextViewStyle"
                            android:text="@string/check_wiper_info"/>
                    </LinearLayout>

                    <Button
                        style="@style/ListNgButtonStyle" />
                </LinearLayout>

                <View
                    style="@style/ListViewSeparator"/>
            </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/back_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@string/action_back"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/action_next"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
