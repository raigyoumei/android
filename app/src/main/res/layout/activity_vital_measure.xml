<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/titleTextViewStyle"
        android:text="@string/vital_measure_title"/>

    <LinearLayout
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/vital_sensor_spinner"
            style="@style/spinnerTheme" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/measure_button"
                style="?android:textAppearanceSmall"
                android:layout_width="122dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/action_measure"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/msginfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_height="match_parent"
                android:text="@string/vital_test_heart_rate"/>

            <TextView
                android:id="@+id/test_heart_rate"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:text="@string/vital_test_default_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:text="@string/vital_test_r_heart_rate" />

            <TextView
                android:id="@+id/test_r_heart_rate"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:text="@string/vital_test_default_value"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_height="match_parent"
                android:text="@string/vital_test_stress"/>

            <TextView
                android:id="@+id/test_stress"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:text="@string/vital_test_default_value"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_height="match_parent"
                android:text="@string/vital_test_mood"/>

            <TextView
                android:id="@+id/test_mood"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:text="@string/vital_test_default_value"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:text="@string/vital_test_signal_quality" />

            <TextView
                android:id="@+id/test_signal_quality"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:layout_height="match_parent"
                android:text="@string/vital_test_default_value"/>

        </LinearLayout>



        <TextView
            android:id="@+id/test_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dip"
            android:text="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/next_button"
            style="@style/nextButtonStyle"/>
    </LinearLayout>


</LinearLayout>
