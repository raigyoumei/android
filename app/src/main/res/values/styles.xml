    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <!--
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingBottom">5pt</item>
        <item name="android:paddingLeft">5pt</item>
        <item name="android:paddingRight">5pt</item>
        -->
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">40sp</item>
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingBottom">5pt</item>
        <item name="android:paddingLeft">5pt</item>
        <item name="android:paddingRight">5pt</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingBottom">5pt</item>
        <item name="android:paddingLeft">5pt</item>
        <item name="android:paddingRight">5pt</item>
    </style>


    <!-- list view style -->
    <style name="ListTitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_view_text_size</item>
    </style>

    <style name="ListMainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:layout_height">0dp</item>-->
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListSubTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:layout_height">0dp</item>-->
        <item name="android:textSize">@dimen/list_subtext_size</item>
    </style>

    <style name="ListButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/list_button_text_size</item>
        <item name="android:background">@drawable/toggle_btn_background</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="ListNormalGoupButtonStyle" parent="ListButtonStyle">
        <item name="android:textOff">@string/action_normal</item>
        <item name="android:textOn">@string/action_go_up</item>
    </style>

    <style name="ListOkNgButtonStyle" parent="ListButtonStyle">
        <item name="android:textOff">@string/action_ok</item>
        <item name="android:textOn">@string/action_ng</item>
    </style>

    <style name="ListNeedConfirmOrNotButtonStyle" parent="ListButtonStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:textOff">@string/action_no_exception</item>
        <item name="android:textOn">@string/action_need_confirm</item>
    </style>

    <style name="ListViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="spinnerTheme" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="titleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottomButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="backButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/action_back</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="nextButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/action_next</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <!-- list view style end -->

    <!--add sato-->
    <style name="ListTextViewNoExceptionStyle" parent="ListTextViewStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:text">@string/action_no_exception</item>
    </style>

    <style name="ListTextViewNeedConfirmStyle" parent="ListTextViewStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:text">@string/action_need_confirm</item>
    </style>

    <style name="ListTextViewNormalStyle" parent="ListTextViewStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!--add sato end-->

    <!--message add sato-->
    <style name="MessageStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_msg</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <!--message add sato end -->

    <style name="vitalTitleTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="vitalValueTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <!--<style name="EditTextNumberStyle" parent="android:Widget.EditText">-->
        <!--<item name="android:layout_width">0dp</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:gravity">right</item>-->
        <!--<item name="android:layout_weight">2</item>-->
        <!--<item name="android:maxLines">1</item>-->
        <!--<item name="android:inputType">numberDecimal</item>-->
        <!--<item name="android:textSize">@dimen/list_title_text_size</item>-->
    <!--</style>-->

    <style name="EditTextViewStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
    </style>

    <style name="EditTextNumberStyle" parent="EditTextViewStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
